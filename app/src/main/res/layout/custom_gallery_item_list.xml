<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/rl_thumimage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/ColorWhite">

            <ImageView
                android:id="@+id/iv_album_thumbnil1"
                android:layout_width="70.0dip"
                android:layout_height="70.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6.0dip"
                android:layout_marginTop="2.0dip"
                android:layout_marginRight="3.0dip"
                android:paddingTop="3.0dip"
                android:paddingBottom="2.0dip" />

            <ImageView
                android:id="@+id/iv_album_thumbnil"
                android:layout_width="70.0dip"
                android:layout_height="70.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:paddingTop="3.0dip"
                android:paddingBottom="2.0dip" />

            <ImageView
                android:id="@+id/thumbImage"
                android:layout_width="70.0dip"
                android:layout_height="70.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:layout_width="70.0dip"
                android:layout_height="70.0dip"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip">

                <ImageView
                    android:id="@+id/playthumbImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:paddingLeft="4.0dip"
                    android:paddingTop="4.0dip"
                    android:paddingRight="4.0dip"
                    android:paddingBottom="4.0dip" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_textAlbumName"
                android:layout_width="220.0dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4.0dip"
                android:layout_toRightOf="@+id/iv_album_thumbnil1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textAlbumName"
                    android:layout_width="fill_parent"
                    android:layout_height="25.0dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="6.0dip"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="Photos sfsfdf"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/Color_Menu_Thumb_Font"
                    android:textSize="17.0sp" />

                <LinearLayout
                    android:id="@+id/ll_DateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3.0dip"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lbl_Date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="10.0dip"
                        android:gravity="center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="Date: "
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/Color_Secondary_Font"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/lbl_Time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:gravity="center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="Time: "
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/Color_Secondary_Font"
                        android:textSize="12.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_Size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3.0dip"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_Size"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_marginBottom="6.0dip"
                        android:gravity="center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="Size: "
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/Color_Secondary_Font"
                        android:textSize="12.0sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_selection"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/album_grid_item_boarder_unselect"
            android:orientation="vertical" />
    </FrameLayout>
</RelativeLayout>