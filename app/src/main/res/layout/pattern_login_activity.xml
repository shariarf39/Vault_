<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ColorAppTheme"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorAppTheme"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="40.0dip">

        <ImageView
            android:layout_width="110.0dip"
            android:layout_height="110.0dip"
            android:background="@drawable/appicon" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="@color/transparent_Black_95"
            android:shadowDx="2.0"
            android:shadowDy="2.0"
            android:shadowRadius="2.0"
            android:text="@string/app_name"
            android:textColor="@color/ColorWhite"
            android:textSize="30.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginBottom="10.0dip"
        android:layout_weight="3.0"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_wrong_pttern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10.0dip"
            android:text="@string/lblsetting_SecurityCredentials_Setpattern_Tryagain"
            android:textAppearance="?android:textAppearance"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14.0sp"
            android:textStyle="normal"
            android:typeface="normal" />

        <com.example.ryangrady.securitylocks.ConfirmLockPatternViewLogin
            android:id="@+id/pattern_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30.0dip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_forgotpattern"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblforgotpattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_Forgot_Pattern"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/ColorWhite"
                android:textSize="14.0sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="1.0px"
        android:layout_height="1.0px" />
</LinearLayout>