<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#C3494747"
            >


            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/mono_font"
                android:text="@string/app_name"

                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </RelativeLayout>

        <!--Image-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                >
            <ImageView

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mid_ic"
                android:layout_centerVertical="true"
            />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                >

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/photo_re"
                    />
                <ImageView
                    android:id="@+id/video"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/vedio_re"
                    />


            </LinearLayout>


        </LinearLayout>
        <!--Audio-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                >
                <ImageView

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mid_ic"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                >

                <ImageView
                    android:id="@+id/audio"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/audio_res"
                    />
                <ImageView
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/password_re"
                    />


            </LinearLayout>


        </LinearLayout>

        <!--Doucment-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        >
                        <ImageView

                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/mid_ic"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="250dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        >

                        <ImageView
                            android:id="@+id/document"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/du_re" />

                        <ImageView
                            android:id="@+id/todolist"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:src="@drawable/todo_re"
                            />


                    </LinearLayout>


                </LinearLayout>


                <!--fsdfsdfds-->


            </LinearLayout>

        </ScrollView>





        <!--///////////////////////////////////////////////////-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/listgridd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/btncam" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/btnvid" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nativeLay"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginVertical="5dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="gone"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                               android:id="@+id/gallary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/btngall" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/btnaud" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/btndoc" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/btnpass" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nativeLay1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/notes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/btnnote" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/btntodolist" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>