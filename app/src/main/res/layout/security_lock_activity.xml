<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/ll_SecurityCredentials_TopBaar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/Colortransparent"
        android:gravity="center_vertical"
        android:paddingTop="12.0dip"
        android:paddingBottom="12.0dip"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_weight="1.0"
            android:gravity="start">

            <TextView
                android:id="@+id/SecurityCredentialsToBaar_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="7.0dip"
                android:text="@string/lblsetting_SecurityCredentials_topbaar_SelectSecurityCredentials"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/ColorWhite"
                android:textSize="20.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:background="@color/White"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rootViewGroup"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblsetting_SecurityCredentials_topbaar_SelectSecurityCredentials"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/ColorAppTheme"
                android:textSize="19.0sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_weight="2.0"
            android:orientation="vertical">

            <ListView
                android:id="@+id/SecurityCredentialsListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:cacheColorHint="@android:color/transparent"
                android:divider="#00000000"
                android:dividerHeight="10.0dip"
                android:listSelector="@android:color/transparent"
                android:scrollingCache="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>